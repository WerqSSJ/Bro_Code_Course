#include <iostream>
#include <cmath>


int main()
{
    char op ;
    double num1;
    double num2;
    double result;
    std::cout<<"********************************* Calculator *************************"<<std::endl;
    
    
    std::cout<<"Enter either (+ , - , * , /,^) : \n";
    std::cin>>op;
    
    
    std::cout<<"Enter the first number : \n";
    std::cin>>num1;
    
    
    std::cout<<"Enter the secend number : \n";
    std::cin>>num2;
    
    
    switch(op){
        case '+':
          result = num1 + num2;
          std::cout<<"Result is equal to : "<<result<<std::endl;
        break;
        case '-':
          result = num1 - num2;
          std::cout<<"Result is equal to : "<<result<<std::endl;
        break;
        case '*':
          result = num1 * num2;
          std::cout<<"Result is equal to : "<<result<<std::endl;
        break ;
        case '/':
          result = num1/num2;
          std::cout<<"Result is equal to : "<<result<<std::endl;
        break;
        case '^':
          result = pow(num1,num2);
          std::cout<<"Result is equal to : "<<result<<std::endl;
        break;
        default :
        std::cout<<"you didnt enter correct operator!";
        break ;
        
    }
    
    std::cout<<"**********************************************************************"<<std::endl;
    

    return 0;
}
